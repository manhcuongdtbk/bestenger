<% if user_signed_in? %>
  <div class="d-flex flex-column justify-content-center align-items-center min-vw-100 min-vh-100">
    <h1>Signed in as <%= current_user.email %></h1>
    <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
  </div>
<% else %>
  <div class="d-flex justify-content-center align-items-center min-vw-100 min-vh-100">
    <%= link_to "Sign In", new_user_session_path, role: "button", class: "btn btn-primary" %>
  </div>
<% end %>
